{"legislative_session": "104th", "identifier": "SB176", "title": "ETHICS-PROCUREMENT BIDS", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Creates the Procurement Bid Ethics Transparency Act. Provides that no director, employee, investor, or immediate family member of any director, employee, or investor of any corporation, organization, or entity that directly or indirectly operates a procurement bid process for a unit of local government shall simultaneously submit and compete for a procurement bid in that same unit of local government unless they have formally disclosed their involvement to the Executive Ethics Commission. Effective immediately."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary by Sen. Michael E. Hastings", "date": "2025-01-17", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-01-17", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-01-17", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Michael E. Hastings", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\": \"Michael E. Hastings\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced", "links": [{"url": "https://beta.ilga.gov/documents/legislation/104/SB/PDF/10400SB0176.pdf", "media_type": "application/pdf"}, {"url": "https://beta.ilga.gov/Legislation/BillStatus/FullText?LegDocId=197213&DocName=10400SB0176&DocNum=176&DocTypeID=SB&LegID=157423&GAID=18&SessionID=114&SpecSess=&Session=&Print=1", "media_type": "text/html"}], "date": "", "classification": "