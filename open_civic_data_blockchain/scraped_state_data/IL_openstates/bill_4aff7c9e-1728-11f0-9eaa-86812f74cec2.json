{"legislative_session": "104th", "identifier": "HB1748", "title": "PUBLIC REVIEW LEGISLATION", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the General Assembly Operations Act. Provides that all bills introduced in the General Assembly must remain in the chamber of origin for at least 5 calendar days before they can be voted upon on third reading and passed out of the chamber. Provides that, upon passage to the other chamber of the General Assembly, the 5 calendar day requirement is in effect and begins with the day of the bill's arrival in the new chamber. Provides that if a bill is amended in a chamber, the bill must remain in the chamber for an additional 5 calendar days starting with the day the amendment is filed and adopted."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Joe C. Sosnowski", "date": "2025-01-24", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-01-28", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-01-28", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Added Co-Sponsor Rep. Tony M. McCombie", "date": "2025-02-10", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Joe C. Sosnowski", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"lower\", \"name\": \"Joe C. Sosnowski\"}", "organization_id": null}, {"name": "Tony M. McCombie", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"chamber\": \"lower\", \"name\": \"Tony 