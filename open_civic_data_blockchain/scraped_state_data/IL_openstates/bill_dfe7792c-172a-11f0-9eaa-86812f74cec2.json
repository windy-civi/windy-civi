{"legislative_session": "104th", "identifier": "SB2379", "title": "DOMESTIC VIOLENCE-PENALTIES", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Civil No Contact Order Act, the Illinois Domestic Violence Act of 1986, and the Protective Orders Article of the Code of Criminal Procedure of 1963. Provides that the court is encouraged to impose (i) a minimum penalty of 48 (rather than 24) hours imprisonment for a first violation of a civil no contact order, an order of protection, or a protective order and (ii) a minimum penalty of 96 (rather than 48) hours imprisonment for a second or subsequent violation of a civil no contact order, an order of protection, or a protective order."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary by Sen. John F. Curran", "date": "2025-02-07", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-07", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-02-07", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "John F. Curran", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\": \"John F. Curran\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced", "links": [{"url": "https://beta.ilga.gov/documents/legislation/104/SB/PDF/10400SB2379.pdf", "media_type": "application/pdf"}, {"url": "https://beta.ilga.gov/Legislation/BillStatus/FullText?LegDocId=202159&DocName=10400SB2379&DocNum=2379&DocTypeID=SB&LegID=162371&GAID=18&SessionID=114&SpecSess=&Session=&Print=1", "media_type": "text/html"}], "date"