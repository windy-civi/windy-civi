{"legislative_session": "104th", "identifier": "SB2286", "title": "INS-PREVENTIVE CARE PRIOR AUTH", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Prior Authorization Reform Act. Provides that, notwithstanding any other provision of law, a health insurance issuer or a contracted utilization review organization may not require prior authorization for preventive health services recommended by a health care professional. Amends the Illinois Insurance Code. Provides that a policy of group health insurance coverage or individual health insurance coverage shall, at a minimum, provide coverage and shall not require prior authorization or impose any cost-sharing requirements, including a copayment, coinsurance, or deductible, for specified preventive health services. Effective January 1, 2027."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary by Sen. Mike Simmons", "date": "2025-02-07", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-07", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-02-07", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}, {"description": "Added as Co-Sponsor Sen. Rachel Ventura", "date": "2025-03-04", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Mike Simmons", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\": \"Mike Simmons\"}", "organization_id": null}, {"name": "Rachel Ventura", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{