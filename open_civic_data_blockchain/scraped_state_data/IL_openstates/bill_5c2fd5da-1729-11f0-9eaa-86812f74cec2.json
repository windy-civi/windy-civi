{"legislative_session": "104th", "identifier": "HB3820", "title": "WARN ACT-SEVERANCE", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Illinois Worker Adjustment and Retraining Notification Act. Provides that an employer shall provide severance pay to a terminated employee equal to one week of pay for each full year of employment. Provides that, if the employer provides any employee with less than the number of days of notification required under the Act, the employer shall provide that employee with an additional 4 weeks of pay. Sets forth provisions concerning severance pay provided by the employer under a collective bargaining agreement and waiver of rights under the provisions."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Gregg Johnson", "date": "2025-02-07", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Assigned to Labor & Commerce Committee", "date": "2025-03-11", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": []}, {"description": "Rule 19(a) / Re-referred to Rules Committee", "date": "2025-03-21", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Gregg Johnson", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"lower\", \"name\": \"Gregg Johnson\"}", "organization_id": null}], "related_