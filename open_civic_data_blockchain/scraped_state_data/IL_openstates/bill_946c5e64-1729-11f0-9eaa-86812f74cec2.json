{"legislative_session": "104th", "identifier": "HJRCA10", "title": "CONAMEND-GA COMPENSATION", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["constitutional amendment"], "subject": [], "abstracts": [{"note": "", "abstract": "Proposes to amend the Legislature Article of the Illinois Constitution. Provides that the annual base salary of a member shall be the same as the annual median household income in the State in the first year of a General Assembly as reported by the United States Bureau of the Census. Provides that the General Assembly shall pass no law that increases the base salary of a member of the General Assembly. Provides that the Amendment takes effect upon the conclusion of the 104th General Assembly."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. John M. Cabello", "date": "2025-02-04", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "Read in Full a First Time", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "John M. Cabello", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"lower\", \"name\": \"John M. Cabello\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced", "links": [{"url": "https://beta.ilga.gov/documents/legislation/104/HJRCA/PDF/10400HC0010.pdf", "media_type": "application/pdf"}, {"url": "https://beta.ilga.gov/Legislation/BillStatus/FullText?LegDocId=200415&DocName=10400HC0010&DocNum=10&DocTypeID=HJRCA&LegID=160628&GAID=18&SessionID=114&SpecSess=&Session=&Print=1", "media_type": "text/html"}], "date": "", "classification":