{"legislative_session": "104th", "identifier": "HB2824", "title": "PEN CD-CHI POLICE/FIRE-WIDOW", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Chicago Police and Chicago Firefighter Articles of the Illinois Pension Code. Provides that a widow's annuity shall be equal to 66 2/3%(instead of 50%) of the retirement annuity the deceased policeman or fireman was receiving at the time of death or 66 2/3% (instead of 50%) of the retirement annuity the policeman or fireman would have been eligible for if the policeman or fireman retired from service on the day before the policeman's or fireman's death. Amends the State Mandates Act to require implementation without reimbursement."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Lindsey LaPointe", "date": "2025-02-05", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-06", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-02-06", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Chief Sponsor Changed to Rep. Angelica Guerrero-Cuellar", "date": "2025-02-27", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Angelica Guerrero-Cuellar", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"lower\", \"name\": \"Angelica Guerrero-Cuellar\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced", "links": [{"url": "https://beta.ilga.gov/documents/legislation/104/HB/PDF/10400HB2824.pdf", "media_type": "application/pdf"}