{"legislative_session": "104th", "identifier": "HB3621", "title": "INC TX-OPPORTUNITY ZONES", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Illinois Income Tax Act. Creates a credit in an amount equal to the investment made by the taxpayer during the taxable year in a Qualified Opportunity Fund. Provides that no such credit may be taken for any taxable year that begins prior to January 1, 2025. Provides that excess credits may be carried forward or back. Provides that the aggregate amount of the Qualified Opportunity Fund tax credit shall be limited to $10,000 per taxpayer per calendar year. Provides that the credit is exempt from the Act's automatic sunset provision. Effective immediately."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Justin Slaughter", "date": "2025-02-07", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Assigned to Revenue & Finance Committee", "date": "2025-03-11", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": []}, {"description": "To Income Tax Subcommittee", "date": "2025-03-13", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Rule 19(a) / Re-referred to Rules Committee", "date": "2025-03-21", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Justin Sla