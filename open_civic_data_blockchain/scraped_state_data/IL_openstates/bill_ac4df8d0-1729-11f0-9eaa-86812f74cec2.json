{"legislative_session": "104th", "identifier": "SB167", "title": "PFAS-CHILD PRODUCTS", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the PFAS Reduction Act. Provides that, beginning January 1, 2026, a person may not sell, offer for sale, or distribute for sale in this State a juvenile product if the product or a product component contains intentionally added PFAS. Provides for enforcement. Exempts from the Act's requirements products that are federally preempted, products already regulated by the Act, used products, prosthetic or orthotic devices, and any medical device or drug used in a medical setting or in medical applications regulated by the United States Food and Drug Administration. Defines terms."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary by Sen. Laura Fine", "date": "2025-01-17", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-01-17", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-01-17", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}, {"description": "Added as Co-Sponsor Sen. Laura M. Murphy", "date": "2025-03-20", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Laura Fine", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\": \"Laura Fine\"}", "organization_id": null}, {"name": "Laura M. Murphy", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"chamber\": \"upper\", \"name\": \"Laura M. Murphy\"}", "organization_id": null}], "rela