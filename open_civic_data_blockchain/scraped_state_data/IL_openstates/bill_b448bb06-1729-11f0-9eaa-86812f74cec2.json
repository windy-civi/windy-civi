{"legislative_session": "104th", "identifier": "SB227", "title": "INC TX-DATA CENTERS", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Illinois Income Tax Act. Provides that, if a taxpayer is awarded a credit by the Department of Commerce and Economic Opportunity in connection with a qualifying Illinois data center located in a qualified area or a data center developed by a minority-owned business, a women-owned business, or a business owned a person with a disability, then the taxpayer is entitled to an additional income tax credit in an amount equal to 5% of the taxpayer's investment in qualified tangible personal property used in the construction or operation of that data center. Effective immediately."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary by Sen. Lakesia Collins", "date": "2025-01-22", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-01-22", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-01-22", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}, {"description": "Added as Chief Co-Sponsor Sen. Napoleon Harris, III", "date": "2025-02-26", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}, {"description": "Added as Chief Co-Sponsor Sen. Elgie R. Sims, Jr.", "date": "2025-02-27", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Lakesia Collins", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\": \"Lakesia Collins\"}", "organizati