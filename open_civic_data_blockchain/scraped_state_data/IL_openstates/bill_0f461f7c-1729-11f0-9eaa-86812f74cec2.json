{"legislative_session": "104th", "identifier": "HB3241", "title": "IL TRUST ACT-COUNTY OPT OUT", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Illinois TRUST Act. Provides that, notwithstanding any other provision of law to the contrary, a county is not required to comply with the provisions of the Act if the county board of the county adopts a resolution for that purpose on or after the effective date of the amendatory Act. Provides that if the county board adopts such a resolution, neither the county nor any officer or employee of the county shall be civilly or criminally liable for noncompliance with the Act."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Michael J. Coffey, Jr.", "date": "2025-02-06", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Added Co-Sponsor Rep. Kevin Schmidt", "date": "2025-03-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Added Co-Sponsor Rep. Dan Ugaste", "date": "2025-03-19", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Michael J. Coffey, Jr.", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"lower\", \"name\": \"Michael J. Coffey, Jr.\"}", "organization_id": null}, {"name": "Kevin Schmidt", "classification": "cosponsor", "entity_type": "person", "prim