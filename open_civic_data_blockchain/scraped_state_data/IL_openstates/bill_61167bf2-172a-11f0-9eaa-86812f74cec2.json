{"legislative_session": "104th", "identifier": "SB1440", "title": "OCCUPATIONAL SAFETY-PENALTY", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Occupational Safety and Health Act. Provides that a public employer that willfully (rather than intentionally) violates the Act, the Safety Inspection and Education Act, or the Health and Safety Act, or any standard, rule, regulation, or order under any of those Acts, or who demonstrates plain indifference to any provision of any of those Acts or any such standard, rule, regulation, or order, may be assessed a civil penalty of not more than $70,000 per violation (rather than $10,000 per violation)."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary by Sen. Robert Peters", "date": "2025-01-31", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-01-31", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-01-31", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Robert Peters", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\": \"Robert Peters\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced", "links": [{"url": "https://beta.ilga.gov/documents/legislation/104/SB/PDF/10400SB1440.pdf", "media_type": "application/pdf"}, {"url": "https://beta.ilga.gov/Legislation/BillStatus/FullText?LegDocId=199766&DocName=10400SB1440&DocNum=1440&DocTypeID=SB&LegID=159978&GAID=18&SessionID=114&SpecSess=&Session=&Print=1", "media_type": "text/html"}], "date": "", "classification": ""}], "document