{"legislative_session": "104th", "identifier": "SB1931", "title": "CONSUMER FRAUD-CARD SURCHARGES", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Consumer Fraud and Deceptive Business Practices Act. Provides that it is an unlawful practice for a person to impose a credit card or charge card surcharge on any transaction unless that person also accepts cash as a form of payment for all transactions under $1,000. Provides that nothing prohibits a person from offering a discount on a transaction to induce payment by cash, check, debit card, or similar means, rather than payment by charge card or credit card. Defines terms."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary by Sen. Suzy Glowiak Hilton", "date": "2025-02-06", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-06", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-02-06", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Suzy Glowiak Hilton", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\": \"Suzy Glowiak Hilton\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced", "links": [{"url": "https://beta.ilga.gov/documents/legislation/104/SB/PDF/10400SB1931.pdf", "media_type": "application/pdf"}, {"url": "https://beta.ilga.gov/Legislation/BillStatus/FullText?LegDocId=201033&DocName=10400SB1931&DocNum=1931&DocTypeID=SB&LegID=161245&GAID=18&SessionID=114&SpecSess=&Session=&Print=1", "media_type": "text/html"}], "date": "", "classification": ""}], "documents"