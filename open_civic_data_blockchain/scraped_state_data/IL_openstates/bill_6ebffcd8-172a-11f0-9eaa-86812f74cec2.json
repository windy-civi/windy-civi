{"legislative_session": "104th", "identifier": "SB1543", "title": "INC TX-UNION DUES", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Illinois Income Tax Act. Creates a deduction for the full amount of union dues paid by the taxpayer during the taxable year if the taxpayer was not allowed a federal deduction under the Internal Revenue Code. Provides that, if any amount of union dues representing federal miscellaneous itemized deductions was allowed as a federal deduction, then the amount allowed as an Illinois deduction shall be a specified percentage of the union dues disallowed under the Internal Revenue Code. Provides that the deduction is exempt from the Act's automatic sunset provision. Effective immediately."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary by Sen. Ram Villivalam", "date": "2025-02-04", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-04", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-02-04", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}, {"description": "Added as Chief Co-Sponsor Sen. Christopher Belt", "date": "2025-02-07", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Ram Villivalam", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\": \"Ram Villivalam\"}", "organization_id": null}, {"name": "Christopher Belt", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"chamber\": \"upper\", \"name\": \"Christopher Belt\"}",