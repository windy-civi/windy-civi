{"legislative_session": "104th", "identifier": "SB1961", "title": "SCH CD-NON-RESIDENT PUPILS", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the School Code. Prohibits a district from charging tuition to non-resident pupils. Removes all other language regarding the tuition of non-resident pupils. Removes language regarding the application of provisions based on district population, hearings, and penalties related to non-resident pupil tuition. Removes language prohibiting certain transfers of students. Requires each school board to establish and implement a policy governing the transfer of non-resident students from outside of the school district to schools within the district. Makes other changes."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary by Sen. Cristina Castro", "date": "2025-02-06", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-06", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-02-06", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}, {"description": "Chief Sponsor Changed to Sen. Don Harmon", "date": "2025-03-19", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Don Harmon", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\": \"Don Harmon\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced", "links": [{"url": "https://beta.ilga.gov/documents/legislation/104/SB/PDF/10400SB1961.pdf", "media_type": "application/pdf"}, {"url": "https://beta.il