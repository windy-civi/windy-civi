{"legislative_session": "104th", "identifier": "HB2534", "title": "LIFE INSURANCE-GENETIC INFO", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Genetic Information Privacy Act. Provides that an insurer may not seek information derived from genetic testing for use in connection with a policy of life insurance. Provides that an insurer may consider the results of genetic testing in connection with a policy of life insurance if the individual voluntarily submits the results and the results are favorable to the individual. Amends the Illinois Insurance Code. Provides that an insurer must comply with the provisions of the Genetic Information Privacy Act in connection with the amendment, delivery, issuance, or renewal of a life insurance policy; claims for or denial of coverage under a life insurance policy; or the determination of premiums or rates under a life insurance policy."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Nabeela Syed", "date": "2025-02-04", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-04", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-02-04", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Assigned to Insurance Committee", "date": "2025-03-04", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": []}, {"description": "To Insurance Main Subcommittee", "date": "2025-03-19", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Rule 19(a) / Re-referred to Rules Committee", "date": "2025-03-21", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Nabeela Syed", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"lower\", \"name\": \"Nabeela Syed\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced", "links": [{"url": "https://beta.ilga.gov/documents/legislation/104/HB/PDF/10400HB2534.pdf", "media_type": "application/pdf"}, {"url": "https://beta.ilga.gov/Legislation/BillStatus/FullText?LegDocId=200165&DocName=10400HB2534&DocNum=2534&DocTypeID=HB&LegID=160378&GAID=18&SessionID=114&SpecSess=&Session=&Print=1", "media_type": "text/html"}], "date": "", "classification": ""}], "documents": [], "citations": [], "sources": [{"url": "https://beta.ilga.gov/Legislation/BillStatus?DocNum=2534&GAID=18&DocTypeID=HB&LegId=160378&SessionID=114", "note": ""}], "extras": {}, "_id": "b3e621cc-1728-11f0-9eaa-86812f74cec2"}