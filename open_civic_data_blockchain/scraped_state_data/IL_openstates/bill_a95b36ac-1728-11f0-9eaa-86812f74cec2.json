{"legislative_session": "104th", "identifier": "HB2453", "title": "GENDER-RELATED VIOLENCE", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Gender Violence Act. Provides that \"gender-related violence\" includes sexual contact between a sexual organ of one person and an intimate part of another person in which a \"sexually protective device\" has been intentionally removed by the defendant without the consent of the plaintiff or unintentionally removed but the defendant continues to engage in sexual conduct without getting the consent of the unaware plaintiff. Defines \"sexually protective device\" as any of the following that is intended to prevent pregnancy or sexually transmitted infection: internal or external condom; spermicide; diaphragm; cervical cap; contraceptive sponge; dental dam; or another physical device intended to prevent pregnancy or sexually transmitted infection."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Maura Hirschauer", "date": "2025-02-03", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-04", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-02-04", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Assigned to Judiciary - Civil Committee", "date": "2025-03-04", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": []}, {"description": "Added Co-Sponsor Rep. Katie Stuart", "date": "2025-03-05", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Rule 19(a) / Re-referred to Rules Committee", "date": "2025-03-21", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Maura Hirschauer", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"lower\", \"name\": \"Maura Hirschauer\"}", "organization_id": null}, {"name": "Katie Stuart", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"chamber\": \"lower\", \"name\": \"Katie Stuart\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "Introduced", "links": [{"url": "https://beta.ilga.gov/documents/legislation/104/HB/PDF/10400HB2453.pdf", "media_type": "application/pdf"}, {"url": "https://beta.ilga.gov/Legislation/BillStatus/FullText?LegDocId=200002&DocName=10400HB2453&DocNum=2453&DocTypeID=HB&LegID=160216&GAID=18&SessionID=114&SpecSess=&Session=&Print=1", "media_type": "text/html"}], "date": "", "classification": ""}], "documents": [], "citations": [], "sources": [{"url": "https://beta.ilga.gov/Legislation/BillStatus?DocNum=2453&GAID=18&DocTypeID=HB&LegId=160216&SessionID=114", "note": ""}], "extras": {}, "_id": "a95b36ac-1728-11f0-9eaa-86812f74cec2"}