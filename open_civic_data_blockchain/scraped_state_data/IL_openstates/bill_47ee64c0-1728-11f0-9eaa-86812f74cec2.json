{"legislative_session": "104th", "identifier": "HB1725", "title": "INC TX-LOCAL MEDIA", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Illinois Income Tax Act. Provides that a qualified small business may apply to the Department of Commerce and Economic Opportunity for an income tax credit in an amount equal to the amount paid by the taxpayer during the taxable year for qualified advertising with a local news organization. Provides that the credit may not exceed $2,500 per eligible taxpayer in any taxable year. Provides that the aggregate amount of all tax credits awarded by the Department under the amendatory Act in any calendar year may not exceed $3,000,000. Effective immediately."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Amy Elik", "date": "2025-01-24", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-01-28", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-01-28", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Assigned to Revenue & Finance Committee", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": []}, {"description": "To Income Tax Subcommittee", "date": "2025-03-03", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Rule 19(a) / Re-referred to Rules Committee", "date": "2025-03-21", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Amy Elik", "classification