{"legislative_session": "104th", "identifier": "HB3862", "title": "VEH CD-NON-HIGHWAY VEHICLES", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Illinois Vehicle Code. Allows the Department of Natural Resources to authorize the operation of non-highway vehicles on the roadways under its jurisdiction if the Department determines that the public safety will not be jeopardized. Provides that a county board or township located in a county that permits the use of a non-highway vehicle on its roadways shall not be deemed liable for crashes involving the use of a non-highway vehicle on its roadways. Subjects 2-wheeled non-highway vehicles to the same safety requirements as motorcycles."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Bradley Fritts", "date": "2025-02-13", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Added Co-Sponsor Rep. Chris Miller", "date": "2025-03-12", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Bradley Fritts", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"lower\", \"name\": \"Bradley Fritts\"}", "organization_id": null}, {"name": "Chris Miller", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"chamber\": \"lower\", \"name\": \"Chris Miller\"}", "organization_id": null}], "related_bills": [], "vers