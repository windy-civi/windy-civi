{"legislative_session": "104th", "identifier": "HB1200", "title": "POLICE TRAINING-BACK THE BADGE", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Illinois Police Training Act. Creates within the Illinois Law Enforcement Training Standards Board a Recruitment Division. Provides that the Division shall establish a Back-the-Badge Program, which shall establish recruitment plans for law enforcement agencies. Provides that the Division shall determine and prioritize specific characteristics that a law enforcement agency and community desire in their police officers. Provides that the Division shall cooperate with law enforcement agencies to determine a strategy to hire and retain sworn police officers who are diverse and reflective of the community and the priorities of the law enforcement agencies."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Jason R. Bunting", "date": "2025-01-09", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-01-09", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-01-09", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Added Chief Co-Sponsor Rep. Patrick Sheehan", "date": "2025-02-05", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Added Co-Sponsor Rep. Michael J. Coffey, Jr.", "date": "2025-02-05", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Jason R. Bunting", "classification": "primary", "entity_type": "person", "primary": true,