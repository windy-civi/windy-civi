{"legislative_session": "104th", "identifier": "SB1811", "title": "PUBLIC LABOR-REMEDIES", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Illinois Public Labor Relations Act. Provides that the Illinois Labor Relations Board or the panel having jurisdiction shall determine whether a violation of the Act was serious enough that the Board or panel is unable to order a make-whole remedy. Describes potential reasons for such a determination. Provides that, if the Board makes a determination that the violation frustrated the purposes of the Act, the Board shall include the availability of interest arbitration in its order and, upon request of the charging party, the parties must participate in the impasse arbitration procedures."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with Secretary by Sen. Ram Villivalam", "date": "2025-02-06", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-02-06", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Assignments", "date": "2025-02-06", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}, {"description": "Chief Sponsor Changed to Sen. Graciela Guzm\u00e1n", "date": "2025-02-20", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}, {"description": "Added as Chief Co-Sponsor Sen. Ram Villivalam", "date": "2025-02-20", "organization_id": "~{\"classification\": \"upper\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Graciela Guzm\u00e1n", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"chamber\": \"upper\", \"name\": \"Graciela Guzm\\