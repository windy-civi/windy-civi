{"legislative_session": "104th", "identifier": "HB1718", "title": "CDL PERMITS-SNOW PLOWS", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Amends the Illinois Vehicle Code. Provides that an employee of a township or road district with a population of less than 10,000 (rather than 3,000) operating a vehicle within the boundaries of the township or road district for the purpose of removing snow or ice from a roadway by plowing, sanding, or salting is waived from the requirements of provisions regarding commercial driver's licenses or permits when the employee is needed to operate the vehicle because the employee of the township or road district who ordinarily operates the vehicle and who has a commercial driver's license is unable to operate the vehicle or is in need of additional assistance due to a snow emergency."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "Filed with the Clerk by Rep. Jed Davis", "date": "2025-01-24", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["filing"], "related_entities": []}, {"description": "First Reading", "date": "2025-01-28", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["reading-1"], "related_entities": []}, {"description": "Referred to Rules Committee", "date": "2025-01-28", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}, {"description": "Assigned to Transportation: Vehicles & Safety", "date": "2025-02-18", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": []}, {"description": "Rule 19(a) / Re-referred to Rules Committee", "date": "2025-03-21", "organization_id": "~{\"classification\": \"lower\"}", "classification": [], "related_entities": []}], "sponsorships": [{"name": "Jed Davis", "classification": "primary", "entity_type": "person", "